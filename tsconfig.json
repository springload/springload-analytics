{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "declaration": true,
    "strict": true,
    // "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs"
  }
}
